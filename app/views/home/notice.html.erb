            </nav>
          </div>
          <!-- /.navbar-collapse -->
        </div>

      </div>
    </div>

  </header>
  <section id="intro">
    <div class="notice_board">
      <div class="section_back">
        <div class="new_board">
        
           <h1 id="board_name"><%=@post.title%></h1>
           <div class="e_d_button">
          <!--모달 수정-->
           <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#editModal" > 수정 </button>  
           <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" > 
                <div class="modal-dialog"> 
                  <div class="modal-content"> 
                    <div class="modal-header"> 
                      <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                        <span class="sr-only">Close</span>
                      </button> 
                      <h4 class="modal-title" id="myModalLabel">게시글 수정</h4> 
                    </div> 
                    <form action='/home/update/<%= @post.id%>' method='post'>
                      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                      <div class="modal-body">
                          제목: <input type='text' class="btn btn-default" name='post_title' value=<%= @post.title %>><br><br>
                          내용: <textarea class="btn btn-default" name='post_content' width='700'><%= @post.content %></textarea><br>
                      </div> 
                      <div class="modal-footer"> 
                        <input type="submit" class="btn btn-primary" value="완료" >
                        <button type="button" class="btn btn-default" data-dismiss="modal">닫기</button> 
                      </div> 
                    </form>
                  </div> 
                </div> 
              </div> 
          
          <!--모달 수정-->
          <a href="/home/destroy/<%= @post.id%>"><button type="button" class="btn btn-primary btn-lg">삭제</button></a>
         </div>
         <div class="board_content_1">
            <%=@post.content%><br><br>  
            <%@post.comments.each do |c|%>
              익명의 X : <%=c.content%> <a href ='comments/delete/<%=c.id%>'><button type="button" class="btn btn-default btn-sm">삭제</button></a><br>
            <%end%>
            <br><br>
            <form action="/home/notice/<%=@post.id%>/create" method=post>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <input type='textarea' name='comment' placeholder='댓 글 입 력'>
              <button type="submit" class='btn btn-outline-primary'>입력</button>
            </form>
         </div>
         
        </div>    
      </div>
    </div>
  </section>
